<link rel="stylesheet" href="/css/device/add-device.css" />
<form
    method="post"
    action="http://127.0.0.1:5000/furniture-form/add-furniture"
    id="add-furniture"
    name="chooseDeviceForm"
    enctype="multipart/form-data"
>
    <div class="wrapper2">
        <div class="select">
            <div class="select-tag">
                <label for="data">TYPE OF FURNITURE:</label> <br />
                <select class="choose" id="choose" name="type">
                    <% type.forEach((typeOnly) => { %>
                    <option value="<%= typeOnly.type %>">
                        <%= typeOnly.type %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="adding">
                <h3 class="headerOfDevice"></h3>
            </div>
        </div>
        <div class="furniture-name">
            <label for="furnitureName">NAME</label>
            <input
                type="text"
                class="device-name-input"
                id="furnitureName"
                name="name"
                autocomplete="off"
                required
            />
        </div>
        <div class="id-sn-price">
            <div class="id">
                <label for="furnitureId">ID</label> <br />
                <input
                    type="text"
                    class="id-input"
                    id="furnitureId"
                    name="ID"
                    autocomplete="off"
                    required
                />
            </div>
            <div class="sn">
                <label for="furnitureSN">SN</label> <br />
                <input
                    autocomplete="off"
                    type="text"
                    class="sn-input"
                    id="furnitureSN"
                    name="SN"
                    autocomplete="off"
                    required
                />
            </div>
            <div class="price">
                <label for="furniturePrice">PRICE</label> <br />
                <input
                    type="text"
                    class="price-input"
                    id="furniturePrice"
                    name="price"
                    autocomplete="off"
                />
            </div>
        </div>
        <div class="vendor">
            <label for="furnitureVendor">VENDOR</label> <br />
            <input
                type="text"
                class="vendor-input"
                id="furnitureVendor"
                name="vendor"
                autocomplete="off"
            />
        </div>
        <div class="choose-file">
            <div>
                <label for="file">ADD A FILE</label> <br />
                <input
                    class="file-input"
                    type="file"
                    name="file"
                    id="file"
                    accept=".doc, .docx , .pdf"
                    multiple
                />
            </div>
            <div>
                <label for="photo">ADD A PHOTO</label> <br />
                <input
                    class="photo-input"
                    type="file"
                    name="photo"
                    id="photo"
                    accept="image/*"
                    multiple
                />
            </div>
        </div>
        <label for="furnitureCharacteristics">CHARACTERISTICS</label> <br />
        <textarea
            class="deviceCharacteristics"
            cols="30"
            rows="10"
            id="furnitureCharacteristics"
            name="characteristics"
        ></textarea>
        <label for="furnitureHistory">NOTES</label> <br />
        <textarea
            class="notes"
            id=""
            cols="30"
            rows="10"
            id="furnitureHistory"
            name="notes"
        ></textarea>
        <div class="assign-and-add">
            <div class="assignOrNot">
                <label for="employee">ASSIGN TO EMPLOYEE</label> <br />
                <select class="select-employee" name="owner" id="employee">
                    <option value="storage">склад</option>
                    <% employee.forEach((EmpOnly) => { %>
                    <option value="<%= EmpOnly.name %>">
                        <%= EmpOnly.name %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="whichCompany">
                <label for="companyName">ASSIGN TO COMPANY:</label>
                <select
                    name="company"
                    id="companyName"
                    class="companyName"
                    required
                >
                    <% company.forEach((cmp) => { %>
                    <option value="<%= cmp.company %>">
                        <%= cmp.company %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <button class="button-submit" type="sumbit">add furniture</button>
        </div>
    </div>
</form>
